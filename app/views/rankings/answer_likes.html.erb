<% breadcrumb :answer_likes_ranking %>

<h1 class="text-2xl font-bold mb-4">ベストアンサーランキング</h1>

<table class="w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-blue-500 text-white">
    <tr>
      <th class="py-2 px-4">順位</th>
      <th class="py-2 px-4">ユーザー名</th>
      <th class="py-2 px-4">いいね数</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr class="<%= index.even? ? 'bg-gray-100' : 'bg-white' %>">
        <td class="py-2 px-4 text-center"><%= index + 1 %></td>
        <td class="py-2 px-4">
          <%= link_to user.name, user_path(user), class: "text-blue-600 hover:underline" %>
        </td>
        <td class="py-2 px-4 text-center"><%= user.likes_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
