<h2 class="text-xl font-bold mb-4">アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mb-4">
    <%= f.label :name, "名前", class: "block font-bold mb-2" %>
    <%= f.text_field :name, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :bio, "自己紹介", class: "block font-bold mb-2" %>
    <%= f.text_area :bio, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :profile_image, "プロフィール画像", class: "block font-bold mb-2" %>
    <%= f.file_field :profile_image, class: "w-full p-2 border rounded" %>
    <% if resource.profile_image? %>
      <p class="mt-2">現在の画像:</p>
      <%= image_tag resource.profile_image.url, alt: "Profile Image", width: 150, class: "rounded-full mt-2" %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>

<h3 class="text-xl font-bold mt-6">アカウント削除</h3>
<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700 mt-4" %>
