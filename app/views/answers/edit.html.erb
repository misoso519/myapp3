<h1>回答の編集</h1>

<%= form_with(model: [@question, @answer], local: true, html: { multipart: true }) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> が発生しています:</h2>
      <ul>
        <% @answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body, "回答内容" %><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像をアップロード" %><br>
    <% if @answer.image? %>
      <p>現在の画像:</p>
      <%= image_tag @answer.image.url, alt: "現在の画像", class: "img-fluid" %>
    <% end %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :video, "動画をアップロード" %><br>
    <% if @answer.video? %>
      <p>現在の動画:</p>
      <%= video_tag @answer.video.url, controls: true, class: "img-fluid" %>
    <% end %>
    <%= f.file_field :video, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "回答を更新", class: "btn btn-primary" %>
  </div>
<% end %>
